<div class="banner" style="background-image: linear-gradient(-225deg,
  rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 5%), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
   <!--  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %> -->
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-6">
      <div  class="frame">
        <h2>Description</h2>
        <p>These are the ingredients you will need in order to make yourself a <%= @cocktail.name %></p>
        <% @cocktail.doses.each do |dose| %>
          <p><strong>Ingredient:</strong> <%= dose.ingredient.name %> - <strong>Amount:</strong> <%= dose.description %></p>
          <%= link_to "Delete dose", dose_path(dose), method: :delete,
          data: { confirm: "Are you sure you want to delete this ingredient?" }, :class => "btn btn-danger" %>
        <% end %>
        <br>
        <%= link_to "Go back to all cocktails", cocktails_path, class: "btn btn-primary mt-3" %>
      </div>
    </div>
    <div class="col-6">
      <div class="frame">
        <h2>Add ingredients to your cocktail</h2>
        <%= render "doses/form", cocktail: @cocktail, dose: @dose %>
      </div>
    </div>
  </div>
</div>
