<div class="banner-main" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 5%), url('<%= image_path 'https://source.unsplash.com/dmkmrNptMpw/1600x900/' %>');">
  <div class="container">
    <h1><i class="fas fa-cocktail"></i> Mr Cocktail</h1>
    <h2>Your one-stop-show for delicious drinks!</h2>
  </div>
</div>
<div class="container">
  <h2>Explore our cocktails</h2>
  <p>Mr Cocktail has a vast collection of cocktails for your enjoyment. Browse
  the selection and find the perfect drink for you.</p>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
          <div class="card col-12 col-md-6 col-lg-3 m-2 " style="width: 18rem;">
            <img class="card-img-top" src="https://source.unsplash.com/1600x900/?cocktail" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= cocktail.name %></h5>
              <%= link_to "explore cocktail", cocktail_path(cocktail), class: "btn btn-primary" %>
            </div>
          </div>
        <!-- <p><strong><%= link_to cocktail.name, cocktail_path(cocktail) %></strong></p> -->
      <% end %>
    </div>
  </div>
</div>
